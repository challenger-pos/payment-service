# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
region  = "us-east-1"
project_name = "challengeone"
service_name = "billing"

# Environment (development, homologation, production)
environment = "dev"

# Application Configuration
app_replicas = 2
app_port     = 8080

# Docker Image (set by CI/CD pipeline)
image_repository = "docker.io/YOUR_DOCKER_USER/billing-service"
image_tag        = "latest"

# Database
db_password = "your-secure-password-here"

# AWS SQS Credentials
aws_access_key = "YOUR_AWS_ACCESS_KEY"
aws_secret_key = "YOUR_AWS_SECRET_KEY"

# Mercado Pago
mercadopago_access_token = "YOUR_MERCADOPAGO_ACCESS_TOKEN"
mercadopago_public_key   = "APP_USR-test-public-key"

# SQS Queue
sqs_queue_url = "https://sqs.us-east-1.amazonaws.com/123456789012/payment-request-queue"

# HPA Configuration
hpa_min_replicas   = 2
hpa_max_replicas   = 10
hpa_cpu_threshold  = 70
hpa_memory_threshold = 80
